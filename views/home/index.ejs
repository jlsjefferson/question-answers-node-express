<body>
    <div class="container" id="home-perguntas">
       <% questions.forEach(questions => { %>
          <div class="card">
             <div class="card-header">
                <h3><%= questions.title %></h3>
             </div>
             <div class="card-body">
                <p><%= questions.description %></p>
             </div>
             <div class="card-footer">
                  <a href="/question/<%=questions.id%>"> <button type="submit" class="btn btn-primary">Responder</button></a>
              </div>
          <%})%>
    </div>
 </body>
